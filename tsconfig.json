{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["ui/routes/*"],
      "@medias/*": ["ui/medias/*"],
      "@components/*": ["ui/components/*"],
      "@styles/*": ["ui/styles/*"],
      "@data/*": ["data/*"],
    },
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
